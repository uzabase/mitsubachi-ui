{
  "name": "mitsubachi-ui",
  "version": "0.8.5",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "mitsubachi-ui-mcp": "node ./tools/mcp/bin.js"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build": "rimraf dist && run-s build:*",
    "build:ts": "tsc -p tsconfig-build.json",
    "build:custom-elements-manifest": "custom-elements-manifest analyze --config custom-elements-manifest.config.mjs",
    "build:mcp": "esbuild --bundle --format=esm --platform=node tools/mcp/index.ts --packages=external  --outfile=tools/mcp/bin.js",
    "build:css": "node tools/copy-css.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "run-s \"format:* !format:prettier:check\"",
    "format:prettier": "prettier --write '(.storybook|src|stories|tests|tools)/**/*.ts'",
    "format:prettier:check": "prettier --check '(.storybook|src|stories|tests|tools)/**/*.ts'",
    "format:lint": "stylelint --fix 'src/**/*.css'",
    "test": "vitest",
    "mcp": "node --experimental-strip-types ./tools/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uzabase/mitsubachi-ui.git"
  },
  "files": [
    "dist", "tools"
  ],
  "license": "ISC",
  "dependencies": {
    "@acab/reset.css": "0.11.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@eslint/js": "^9.22.0",
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/web-components": "^8.6.12",
    "@storybook/web-components-vite": "^8.6.12",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.10",
    "@vitest/browser": "^3.0.8",
    "esbuild": "^0.25.2",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-wc": "^3.0.0",
    "globals": "^16.0.0",
    "lit": "^3.2.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.51.0",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "shadow-dom-testing-library": "^1.12.0",
    "storybook": "^8.6.12",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.8",
    "zod": "^3.24.2"
  }
}
